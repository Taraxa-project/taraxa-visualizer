{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "incremental": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}